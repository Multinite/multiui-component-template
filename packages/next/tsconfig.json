{
  "extends": "../ts/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "declaration": true,
    "jsx": "preserve",
    // "moduleResolution": "Bundler" // disabled because it would cause nextjs to fail to build.
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "dist"
  ],
  "include": ["src/**/*"]
}
